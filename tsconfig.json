{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "declaration": true,
        "baseUrl": "./src",
        "noUnusedLocals": true,
        "strictNullChecks": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}